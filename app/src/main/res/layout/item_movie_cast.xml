<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="wrap_content"
    android:layout_height="100dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <!--region $CastImage-->




                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_cast_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/wanda"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />


        <!--endregion-->
        <!--region $CastNames-->

        <TextView
            android:id="@+id/tv_cast_character"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            app:layout_constraintBottom_toBottomOf="@id/iv_cast_image"
            android:text="Actor"
            android:textColor="@color/textSecondaryColor"
            app:layout_constraintStart_toEndOf="@id/iv_cast_image"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tv_cast_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/iv_cast_image"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/titlesTextColor"
            android:layout_marginBottom="10dp"
            tools:text="Henry Cavill"
            app:layout_constraintTop_toTopOf="@id/iv_cast_image"/>

        <!--endregion-->

    </androidx.constraintlayout.widget.ConstraintLayout>
